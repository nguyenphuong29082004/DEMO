@{
    ViewData["Title"] = "Danh sach hang hoa";
}
<h1>@ViewData["Title"]</h1>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/2.1.8/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/2.1.8/css/jquery.dataTables.min.css" rel="stylesheet" />


<H1>Danh sach hang hoa</H1>
<table id="tbl1">
    <thead>
        <tr>
            <th>TT</th>
            <th>Ma</th>
            <th>Ten hang</th>
            <th>Don vi</th>
            <th>Gia nhap</th>
            <th>Gia ban</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>
<script>
    $(document).ready(function () {
        var url = "https://localhost:7121/Hanghoa/Hanghoa/List";
        $.post(url, {}, function (data) {
            var ds = data.data;  // Lấy dữ liệu từ server
            $('#tbl1').show();  // Hiển thị bảng nếu bảng bị ẩn
            $('#tbl1').DataTable({
                data: ds,  // Gán dữ liệu vào bảng
                columns: [
                    { "data": "ma", width: 160, orderable: false },  // Cột "Ma" không thể sắp xếp
                    { "data": "ten" },  // Cột "Ten hang"
                    { "data": "donvi" },  // Cột "Don vi"
                    { "data": "gianhap" },  // Cột "Gia nhap"
                    { "data": "giaban" }  // Cột "Gia ban"
                ]
            });
        });
    });
</script>


